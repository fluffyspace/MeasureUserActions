<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".BubbleActivity"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView
        android:id="@+id/window_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_play_arrow_24"
        android:scaleType="fitCenter"
        android:text="CLICK"
        android:padding="10dp"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="#333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/window_close"/>
    <ImageView
        android:id="@+id/error"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Error"
        android:padding="10dp"
        android:textAllCaps="false"
        android:src="@drawable/baseline_error_outline_24"
        android:scaleType="fitCenter"
        app:tint="#ff0000"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/window_close"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="#333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/error"/>
    <ImageView
        android:id="@+id/start_activity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Error"
        android:padding="10dp"
        android:textAllCaps="false"
        android:src="@drawable/baseline_exit_to_app_24"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toRightOf="@id/error"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="#333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/start_activity"/>
    <TextView
        android:id="@+id/vrijeme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 s"
        android:clickable="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/start_activity"/>
    <!--
        android:shadowColor="@color/black"
        android:shadowRadius="6"-->
</androidx.constraintlayout.widget.ConstraintLayout>